@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer
<h3>@Html.DisplayFor(model => model.Name)'s Details</h3>
@if(@Model.JoinEntities.Count == 0)
{
  <p>@Html.DisplayFor(model => model.Name) Does Not Have Any Machine's Assigned</p>
}
else
{
  <h5>@Html.DisplayFor(model => model.Name)'s Machines</h5>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Machine.Name</li>
      @using (Html.BeginForm("DeleteMachine", "Engineers"))
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="Delete" class="btn btn-danger">
      }
    }
  </ul>
}
<p>@Html.ActionLink($"Add A Machine", "AddMachine", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink($"Edit {Model.Name}", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink($"Delete {Model.Name}", "Delete", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Back To List Of Engineers", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>