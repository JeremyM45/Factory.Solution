@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer
<h3>Edit @Html.DisplayFor(model => model.Name)</h3>
@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <input type="submit" value="Save Changes" class="btn btn-info">
}
<p>@Html.ActionLink($"Back To {Model.Name}'s Details", "Details", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Back To List Of Engineers", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>