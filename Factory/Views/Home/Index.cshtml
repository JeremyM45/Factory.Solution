@{
  Layout = "_Layout"; 
}
@using Factory.Models
<h1>Dr. Sillystringz's Factory</h1>
<p>@Html.ActionLink("See All Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("See All Machines", "Index", "Machines")</p>
<div class="row">
  <div class="col-lg-6">
    @if(@Model.Count == 0)
    {
      <p>No Machines Have Been Added Yet</p>
    }
    <h5>Machines</h5>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId })</li>
    }
  </div>
  <div class="col-lg-6">
    @if(ViewBag.Engineers.Count == 0)
    {
      <p>No Engineers Have Been Added Yet</p>
    }
    <h5>Engineers</h5>
    @foreach (Engineer engineer in ViewBag.Engineers)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers",new { id = engineer.EngineerId })</li>
    }
  </div>
</div>
